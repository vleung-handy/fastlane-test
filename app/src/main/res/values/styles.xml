<resources>

    <!-- Base application theme. -->
    <style name="AppTheme"
           parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/handy_blue</item>
        <item name="colorControlActivated">@color/handy_blue</item>
        <item name="background">@color/handy_bg</item>
    </style>

    <style name="AppTheme.Translucent"/>

    <style name="AppTheme.AppBarOverlay"
           parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="actionOverflowButtonStyle">@style/ToolbarOverFlowIcon</item>
    </style>

    <style name="AppTheme.PopupOverlay"
           parent="ThemeOverlay.AppCompat.Light"/>

    <!-- Screen themes -->
    <style name="LoginTheme"
           parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/handy_blue</item>
        <item name="colorPrimaryDark">@color/transparent</item>
        <item name="android:windowBackground">@drawable/ic_portal_login_bg</item>
    </style>

    <style name="TermsTheme"
           parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/handy_green</item>
        <item name="colorPrimaryDark">@color/handy_green_pressed</item>
    </style>

    <style name="ToolbarOverFlowIcon">
        <item name="android:src">@drawable/ic_gear</item>
        <item name="android:paddingRight">@dimen/options_wheel_padding</item>
    </style>

    <style name="dialog_animation_slide_down_up_from_top">
        <item name="android:windowEnterAnimation">@anim/slide_down_from_top</item>
        <item name="android:windowExitAnimation">@anim/slide_up_to_top</item>
    </style>

    <style name="dialog_animation_slide_out">
        <item name="android:windowExitAnimation">@anim/slide_down_to_bottom</item>
    </style>

    <style name="dialog_animation_slide_up_down_from_bottom">
        <item name="android:windowEnterAnimation">@anim/slide_up_from_bottom</item>
        <item name="android:windowExitAnimation">@anim/slide_down_to_bottom</item>
    </style>

    <!-- Simple font styles -->
    <style name="CircularBold">
        <item name="fontPath">fonts/CircularStd-Bold.otf</item>
    </style>

    <style name="CircularBook">
        <item name="fontPath">fonts/CircularStd-Book.otf</item>
    </style>

    <style name="CircularMedium">
        <item name="fontPath">fonts/CircularStd-Medium.otf</item>
    </style>

    <!--TODO: clean up these text appearance styles -->

    <style name="HandyTextAppearanceListHeader">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/xsmall_text_size</item>
        <item name="fontPath">fonts/CircularStd-Bold.otf</item>
    </style>

    <style name="HandyTextAppearanceListEntrySubtitle">
        <item name="android:textColor">@drawable/list_entry_subtitle_text</item>
        <item name="android:textSize">@dimen/medium_text_size</item>
    </style>

    <style name="HandyTextAppearanceLarge">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/large_text_size</item>
    </style>

    <style name="HandyTextAppearanceMedium">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/medium_text_size</item>
    </style>

    <style name="HandyTextAppearanceSmall"
           parent="@android:style/TextAppearance.Small">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="HandyTextAppearanceTitle"
           parent="@android:style/TextAppearance.Large">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="DateTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="TrayButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">@dimen/default_padding</item>
        <item name="android:paddingRight">@dimen/default_padding</item>
        <item name="android:paddingTop">@dimen/default_padding</item>
        <item name="android:paddingBottom">@dimen/default_padding</item>
        <item name="android:drawablePadding">@dimen/default_padding</item>
        <item name="android:textColor">@color/dark_gray</item>
        <item name="android:textSize">@dimen/medium_text_size</item>
        <item name="android:background">@drawable/button_white</item>
    </style>

    <style name="Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/large_text_size</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:maxHeight">50dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="fontPath">fonts/CircularStd-Book.otf</item>
        <item name="android:textColor">@drawable/button_text_white_trans</item>
    </style>

    <style name="Button.Blue">
        <item name="android:background">@drawable/button_blue</item>
    </style>

    <style name="Button.Blue.Round">
        <item name="android:background">@drawable/button_blue_round</item>
    </style>

    <style name="Button.Grey">
        <item name="android:background">@drawable/button_gray</item>
        <item name="android:textColor">@drawable/button_text_white</item>
    </style>

    <style name="Button.Grey.Round">
        <item name="android:background">@drawable/button_grey_round</item>
    </style>

    <style name="Button.Transparent">
        <item name="android:background">@color/transparent</item>
        <item name="android:textColor">@color/tertiary_gray</item>
    </style>

    <style name="Button.Transparent.Round">
        <item name="android:background">@drawable/button_trans_round</item>
    </style>

    <style name="Button.Green">
        <item name="android:background">@drawable/button_green</item>
    </style>

    <style name="Button.Green.Round">
        <item name="android:background">@drawable/button_green_round</item>
    </style>

    <style name="Button.Red">
        <item name="android:background">@drawable/button_red</item>
    </style>

    <style name="Button.Red.Round">
        <item name="android:background">@drawable/button_red_round</item>
    </style>

    <style name="Button.Red.Round.Empty">
        <item name="android:background">@drawable/button_red_empty_round</item>
        <item name="android:textColor">@drawable/button_text_red</item>
    </style>

    <style name="Button.Purple">
        <item name="android:background">@drawable/button_purple</item>
    </style>

    <style name="Button.Purple.Round">
        <item name="android:background">@drawable/button_purple_round</item>
    </style>

    <style name="Button.Teal">
        <item name="android:background">@drawable/button_teal</item>
    </style>

    <style name="Button.Teal.Round">
        <item name="android:background">@drawable/button_teal_round</item>
    </style>

    <style name="Button.TealEmpty">
        <item name="android:background">@drawable/button_teal</item>
        <item name="android:textColor">@drawable/button_text_teal</item>
    </style>

    <style name="Button.TealEmpty.Round">
        <item name="android:background">@drawable/button_teal_empty_round</item>
        <item name="android:textColor">@drawable/button_text_teal</item>
    </style>

    <style name="Button.PartnerBlueEmpty">
        <item name="android:background">@drawable/button_partner_blue</item>
        <item name="android:textColor">@drawable/button_text_partner_blue</item>
    </style>

    <style name="Button.PartnerBlueEmpty.Round">
        <item name="android:background">@drawable/button_partner_blue_empty_round</item>
        <item name="android:textColor">@drawable/button_text_partner_blue</item>
    </style>

    <style name="Button.SalmonRound">
        <item name="android:textColor">@drawable/button_text_white_trans</item>
        <item name="android:background">@drawable/button_salmon_round</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/medium_text_size</item>
    </style>

    <style name="Button.White">
        <item name="android:background">@drawable/button_white</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Button.White.Round">
        <item name="android:background">@drawable/button_white_round</item>
        <item name="android:textColor">@drawable/button_text_blue</item>
    </style>

    <style name="Button.White.Round.Empty">
        <item name="android:background">@drawable/button_white_empty_round</item>
        <item name="android:textColor">@drawable/button_text_white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/medium_text_size</item>
    </style>

    <style name="Button.BookingAction">
        <item name="android:textColor">@drawable/button_text_booking_action_white</item>
    </style>

    <style name="Button.BookingAction.White">
        <item name="android:background">@drawable/button_booking_action_white</item>
        <item name="android:textColor">@drawable/button_text_booking_action_blue</item>
    </style>

    <style name="Button.BookingAction.Blue">
        <item name="android:background">@drawable/button_booking_action_blue</item>
    </style>

    <style name="Button.BookingAction.Teal">
        <item name="android:background">@drawable/button_booking_action_teal</item>
    </style>

    <style name="Button.BookingAction.Teal.Empty">
        <item name="android:background">@drawable/button_booking_action_teal</item>
        <item name="android:textColor">@drawable/button_text_booking_action_teal</item>
    </style>

    <style name="Button.BookingAction.Red">
        <item name="android:background">@drawable/button_booking_action_red</item>
    </style>

    <style name="Button.BookingAction.Red.Empty">
        <item name="android:background">@drawable/button_booking_action_red</item>
        <item name="android:textColor">@drawable/button_text_booking_action_red</item>
    </style>

    <style name="TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/default_text_size</item>
        <item name="android:freezesText">true</item>
    </style>

    <style name="TextView.Bold">
        <item name="fontPath">fonts/CircularStd-Bold.otf</item>
    </style>

    <style name="TextView.XXSmall">
        <item name="android:textSize">@dimen/xsmall_text_size</item>
    </style>

    <style name="TextView.Medium">
        <item name="android:textSize">@dimen/medium_text_size</item>
    </style>

    <style name="TextView.Medium.Bold">
        <item name="fontPath">fonts/CircularStd-Bold.otf</item>
    </style>

    <style name="TextView.Small">
        <item name="android:textSize">@dimen/small_text_size</item>
    </style>

    <style name="TextView.Small.Bold">
        <item name="fontPath">fonts/CircularStd-Bold.otf</item>
    </style>

    <style name="TextView.Small.Med">
        <item name="fontPath">fonts/CircularStd-Medium.otf</item>
    </style>

    <style name="TextView.XSmall">
        <item name="android:textSize">@dimen/xsmall_text_size</item>
    </style>

    <style name="TextView.XSmall.Bold">
        <item name="fontPath">fonts/CircularStd-Bold.otf</item>
    </style>

    <style name="TextView.Med">
        <item name="fontPath">fonts/CircularStd-Medium.otf</item>
    </style>

    <style name="TextView.Large">
        <item name="android:textSize">@dimen/large_text_size</item>
    </style>

    <style name="TextView.Large.Bold">
        <item name="fontPath">fonts/CircularStd-Bold.otf</item>
    </style>

    <style name="TextView.Large.Med">
        <item name="fontPath">fonts/CircularStd-Medium.otf</item>
    </style>

    <style name="TextView.XLarge">
        <item name="android:textSize">@dimen/xlarge_text_size</item>
    </style>

    <style name="TextView.XLarge.Bold">
        <item name="fontPath">fonts/CircularStd-Bold.otf</item>
    </style>

    <style name="TextView.XXLarge">
        <item name="android:textSize">@dimen/xxlarge_text_size_new</item>
    </style>

    <style name="TextView.XXLarge.Bold">
        <item name="fontPath">fonts/CircularStd-Bold.otf</item>
    </style>

    <style name="TextView.Headline">
        <item name="fontPath">fonts/CircularStd-Medium.otf</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="TextView.Headline.Blue">
        <item name="android:textColor">@color/handy_blue</item>
    </style>

    <style name="TextView.Headline.Small">
        <item name="fontPath">fonts/CircularStd-Medium.otf</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">@dimen/small_text_size</item>
    </style>

    <style name="TextView.Headline.Small.Light">
        <item name="fontPath">fonts/CircularStd-Book.otf</item>
    </style>

    <style name="TextView.Headline.XSmall">
        <item name="fontPath">fonts/CircularStd-Medium.otf</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">@dimen/xsmall_text_size</item>
    </style>

    <style name="TextView.Headline.XSmall.Blue">
        <item name="android:textColor">@color/handy_blue</item>
    </style>

    <style name="TextView.Headline.XSmall.Bold">
        <item name="fontPath">fonts/CircularStd-Bold.otf</item>
    </style>

    <!--According to Jaclyn, this is the biggest our heading should ever be. 24sp-->
    <style name="TextView.Headline.XLarge">
        <item name="android:textSize">@dimen/xxlarge_text_size_new</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="TextView.Headline.XLarge.Bold">
        <item name="fontPath">fonts/CircularStd-Bold.otf</item>
    </style>

    <style name="TextView.ActionText">
        <item name="fontPath">fonts/CircularStd-Bold.otf</item>
        <item name="android:textColor">@color/partner_blue</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">@dimen/default_text_size</item>
    </style>

    <style name="TextView.Navbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:gravity">center</item>
        <item name="android:singleLine">true</item>
        <item name="android:background">@drawable/nav_bar</item>
        <item name="android:textColor">@color/black</item>
        <item name="fontPath">fonts/CircularStd-Book.otf</item>
        <item name="android:textSize">18sp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
    </style>

    <style name="TextView.HelpNavBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:background">@color/handy_blue</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontPath">fonts/CircularStd-Book.otf</item>
        <item name="android:textSize">18sp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
    </style>

    <style name="TextView.BookingsHeader">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@color/handy_bg</item>
        <item name="android:textSize">@dimen/small_text_size</item>
        <item name="fontPath">fonts/CircularStd-Medium.otf</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
    </style>

    <style name="TextView.BookingOptionInfo">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/xsmall_text_size</item>
        <item name="android:freezesText">false</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="LoginTextInputCell">
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/default_text_size</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:padding">5dp</item>
    </style>

    <style name="TextView.ServiceCategory">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:freezesText">false</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/handy_blue</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">18sp</item>
        <item name="android:background">@drawable/cell_service_category</item>
        <item name="fontPath">fonts/CircularStd-Medium.otf</item>
    </style>

    <style name="List">
        <item name="android:layout_width">match_parent</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="List.White">
        <item name="android:background">@drawable/button_white</item>
    </style>

    <style name="List.White.SupportAction">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:paddingLeft">@dimen/payment_container_horizontal_padding</item>
        <item name="android:paddingRight">@dimen/payment_container_horizontal_padding</item>
        <item name="android:paddingTop">12dp</item>
    </style>

    <style name="List.White.HelpNode">
        <item name="android:layout_height">60dp</item>
        <item name="android:paddingLeft">@dimen/default_padding</item>
        <item name="android:paddingRight">@dimen/default_padding</item>
    </style>

    <style name="RatingButtonToggle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:button">@null</item>
        <item name="android:divider">?android:attr/dividerVertical</item>
        <item name="android:showDividers">middle</item>
    </style>
</resources>
