<resources>

    <!-- Base application theme. -->
    <style name="AppTheme"
           parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/handy_blue</item>
        <item name="colorControlActivated">@color/handy_blue</item>
    </style>

    <style name="AppTheme.Translucent"/>

    <style name="AppTheme.AppBarOverlay"
           parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="actionOverflowButtonStyle">@style/ToolbarOverFlowIcon</item>
    </style>

    <style name="AppTheme.PopupOverlay"
           parent="ThemeOverlay.AppCompat.Light"/>

    <style name="ToolbarOverFlowIcon">
        <item name="android:src">@drawable/ic_gear</item>
        <item name="android:paddingRight">@dimen/options_wheel_padding</item>
    </style>

    <style name="dialog_animation_slide_down_up_from_top">
        <item name="android:windowEnterAnimation">@anim/slide_down_from_top</item>
        <item name="android:windowExitAnimation">@anim/slide_up_to_top</item>
    </style>

    <style name="dialog_animation_slide_out">
        <item name="android:windowExitAnimation">@anim/slide_down_to_bottom</item>
    </style>

    <style name="dialog_animation_slide_up_down_from_bottom">
        <item name="android:windowEnterAnimation">@anim/slide_up_from_bottom</item>
        <item name="android:windowExitAnimation">@anim/slide_down_to_bottom</item>
    </style>

    <style name="MenuButtonLayout">
        <item name="android:layout_width">64dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingTop">18dp</item>
        <item name="android:paddingBottom">18dp</item>
    </style>

