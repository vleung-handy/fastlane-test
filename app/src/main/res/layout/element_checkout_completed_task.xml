<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/completed_task_margin_bottom"
                android:orientation="vertical"
    >

    <ImageView
        android:id="@+id/checkbox_icon"
        android:layout_width="@dimen/checkbox_width_height"
        android:layout_height="@dimen/checkbox_width_height"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:src="@drawable/icon_check_small"
        />

    <TextView
        android:id="@+id/task_text"
        android:layout_width="@dimen/completed_task_width"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/completed_task_text_margin"
        android:layout_marginStart="@dimen/completed_task_text_margin"
        android:layout_toEndOf="@id/checkbox_icon"
        android:layout_toRightOf="@id/checkbox_icon"
        android:textColor="@color/black"
        android:textSize="@dimen/default_text_size"
        tools:text="Bathroom"
        />

</RelativeLayout>
