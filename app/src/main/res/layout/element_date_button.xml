<?xml version="1.0" encoding="utf-8"?>
<com.handy.portal.ui.element.DateButtonView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="65dp"
    android:layout_height="69dp"
    android:background="@drawable/date_button"
    android:orientation="vertical"
    >

    <TextView
        android:id="@+id/date_month_text"
        style="@style/DateTextView"
        android:layout_height="12dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="1dp"
        android:textAllCaps="true"
        android:textColor="@color/text_light_grey"
        android:textSize="@dimen/xsmall_text_size"
        />

    <TextView
        android:id="@+id/date_day_of_week_text"
        style="@style/DateTextView"
        android:layout_height="14dp"
        android:layout_below="@id/date_month_text"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="1dp"
        android:textSize="@dimen/small_text_size"
        />

    <TextView
        android:id="@+id/date_day_of_month_text"
        style="@style/DateTextView"
        android:layout_height="24sp"
        android:layout_below="@id/date_day_of_week_text"
        android:layout_centerHorizontal="true"
        android:textSize="24sp"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/today_text"
        style="@style/DateTextView"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:layout_below="@id/date_day_of_week_text"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:textSize="@dimen/small_text_size"
        android:textStyle="bold"
        android:textAllCaps="true"
        android:text="@string/today"
        android:visibility="invisible"
        />

    <ImageView
        android:id="@+id/provider_requested_indicator_image"
        android:layout_width="5dp"
        android:layout_height="5dp"
        android:layout_below="@id/date_day_of_month_text"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="4dp"
        android:src="@drawable/circle_green"
        android:visibility="gone"
        />

    <ImageView
        android:id="@+id/claimed_job_exists_indicator_image"
        android:layout_width="5dp"
        android:layout_height="5dp"
        android:layout_below="@id/date_day_of_month_text"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="4dp"
        android:src="@drawable/circle_teal"
        android:visibility="gone"
        />

    <ImageView
        android:id="@+id/selected_day_indicator_image"
        android:layout_width="fill_parent"
        android:layout_height="4dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="4dp"
        android:src="@drawable/rectangle_blue"
        />

</com.handy.portal.ui.element.DateButtonView>
