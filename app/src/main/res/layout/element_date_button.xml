<?xml version="1.0" encoding="utf-8"?>
<com.handy.portal.ui.element.DateButtonView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="65dp"
    android:layout_height="wrap_content"
    android:background="@drawable/date_button_background"
    android:orientation="vertical">

    <TextView
        android:id="@+id/date_month_text"
        style="@style/DateTextView"
        android:layout_height="12sp"
        android:layout_marginTop="1dp"
        android:textAllCaps="true"
        android:textColor="@color/text_light_grey"
        android:textSize="12sp"/>

    <TextView
        android:id="@+id/date_day_of_week_text"
        style="@style/DateTextView"
        android:layout_height="14sp"
        android:layout_marginTop="1dp"
        android:textSize="14sp"/>

    <TextView
        android:id="@+id/date_day_of_month_text"
        style="@style/DateTextView"
        android:layout_height="24sp"
        android:textSize="24sp"
        android:textStyle="bold"/>

    <ImageView
        android:id="@+id/provider_requested_indicator_image"
        android:layout_width="5dp"
        android:layout_height="5dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="4dp"
        android:src="@drawable/circle_green"/>

    <ImageView
        android:id="@+id/selected_day_indicator_image"
        android:layout_width="fill_parent"
        android:layout_height="4dp"
        android:layout_marginTop="4dp"
        android:src="@drawable/rectangle_blue"/>

</com.handy.portal.ui.element.DateButtonView>
