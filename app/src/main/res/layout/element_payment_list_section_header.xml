<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/dark_grey_border_bottom_light_background"
    android:orientation="vertical"
    >

    <TextView
        android:id="@+id/payment_list_section_header_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:paddingBottom="@dimen/default_padding"
        android:paddingLeft="@dimen/payment_container_horizontal_padding"
        android:paddingRight="@dimen/payment_container_horizontal_padding"
        android:paddingTop="@dimen/default_padding"
        android:textColor="@color/section_header_text_color"
        android:textSize="@dimen/small_text_size"
        />

</LinearLayout>
