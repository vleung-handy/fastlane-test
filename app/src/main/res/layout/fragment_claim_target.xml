<?xml version="1.0" encoding="utf-8"?>

<FrameLayout
    android:id="@+id/claim_target_frame_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/black_trans">

    <LinearLayout android:id="@+id/claim_target_window_layout"
                  xmlns:android="http://schemas.android.com/apk/res/android"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:background="@color/white"
                  android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@color/white"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingBottom="30dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="30dp">

            <TextView
                android:id="@+id/claim_target_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:paddingBottom="10dp"
                android:text="@string/booking_details_claim_target_title"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/black"
                android:textSize="@dimen/xxlarge_text_size"/>

            <TextView
                android:id="@+id/claim_target_info_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:paddingBottom="20dp"
                android:text=""
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/black"/>

            <LinearLayout
                android:id="@+id/claim_target_progress_icons_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal">
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/bg_active_grey"
            android:orientation="horizontal"
            android:paddingBottom="20dp"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:paddingTop="20dp"
            android:weightSum="2">

            <TextView
                android:id="@+id/expected_pay_label"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="fill"
                android:layout_weight="1"
                android:gravity="center_vertical|left"
                android:minLines="2"
                android:text=""
                android:textColor="@color/white"
                android:textSize="@dimen/large_text_size"/>

            <TextView
                android:id="@+id/claim_target_expected_pay_dollars_text"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical|fill"
                android:layout_weight="1"
                android:gravity="center_vertical|right|end"
                android:text=""
                android:textColor="@color/white"
                android:textSize="@dimen/xxlarge_text_size"
                />
        </LinearLayout>

    </LinearLayout>
</FrameLayout>
