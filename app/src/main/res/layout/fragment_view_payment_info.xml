<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:padding="@dimen/default_padding"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        app:optCardElevation="@dimen/cardview_default_elevation"
        android:layout_width="match_parent"
        android:layout_marginBottom="@dimen/default_margin_x2"
        android:layout_height="wrap_content">
        <TableLayout
            android:stretchColumns="1"
            android:padding="@dimen/default_padding"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TableRow
                android:paddingBottom="@dimen/default_padding"
                android:layout_height="wrap_content"
                android:layout_width="match_parent">
                <TextView
                    android:text="Direct Deposit"
                    android:textSize="@dimen/small_text_size"
                    android:textAppearance="@style/TextView.Bold"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:text="Update"
                    android:textColor="@color/handy_blue"
                    android:textAppearance="@style/TextView.Bold"
                    android:textStyle="bold"
                    android:layout_gravity="right"
                    android:gravity="right"
                    android:textSize="@dimen/xsmall_text_size"
                    android:textAllCaps="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </TableRow>
            <TableRow
                android:paddingBottom="@dimen/default_padding"
                android:layout_height="wrap_content"
                android:layout_width="match_parent">
                <TextView
                    android:text="Citi Bank Account"
                    android:textSize="@dimen/small_text_size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:text="**** 3284"
                    android:textSize="@dimen/small_text_size"
                    android:layout_gravity="right"
                    android:gravity="right"
                    android:textAppearance="@style/TextView.Bold"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </TableRow>
            <TableRow
                android:paddingBottom="@dimen/default_padding"
                android:layout_height="wrap_content"
                android:layout_width="match_parent">
                <ImageView
                    android:layout_span="2"
                    android:src="@drawable/abc_list_divider_mtrl_alpha"
                    android:background="@color/list_divider"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    />
            </TableRow>
            <TableRow
                android:layout_height="wrap_content"
                android:layout_width="match_parent">
                <TextView
                    android:textSize="@dimen/xsmall_text_size"
                    android:text="Updated Sep 28, 2015"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </TableRow>
        </TableLayout>

    </android.support.v7.widget.CardView>
    <TextView
        android:text="Note:\nPlease allow an additional 1-3 days after Handy sends payment for your bank to process it."
        android:textColor="@color/subtitle_grey"
        android:textSize="@dimen/xsmall_text_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>