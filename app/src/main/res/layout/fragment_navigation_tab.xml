<LinearLayout
    android:id="@+id/navigation_tab_fragment"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="95dp"
    android:background="@drawable/background_list_entry"
    android:orientation="horizontal">
    <RadioGroup
        android:id="@+id/tabs"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/light_grey"
        android:orientation="horizontal"
        android:weightSum="5">

        <RadioButton
            android:id="@+id/button_jobs"
            style="@style/TabButton"
            android:layout_weight="1"
            android:drawableTop="@drawable/tab_button_jobs"
            android:text="@string/tab_jobs"/>

        <RadioButton
            android:id="@+id/button_schedule"
            style="@style/TabButton"
            android:layout_weight="1"
            android:checked="false"
            android:drawableTop="@drawable/tab_button_schedule"
            android:text="@string/tab_schedule"/>
        <RadioButton
            android:id="@+id/button_payments"
            style="@style/TabButton"
            android:layout_weight="1"
            android:checked="false"
            android:drawableTop="@drawable/tab_button_payments"
            android:text="@string/tab_payments"/>

        <RadioButton
            android:id="@+id/button_profile"
            style="@style/TabButton"
            android:layout_weight="1"
            android:drawableTop="@drawable/tab_button_profile"
            android:text="@string/tab_profile"/>

        <RadioButton
            android:id="@+id/button_help"
            style="@style/TabButton"
            android:layout_weight="1"
            android:drawableTop="@drawable/tab_button_help"
            android:text="@string/tab_help"/>

    </RadioGroup>
</LinearLayout>