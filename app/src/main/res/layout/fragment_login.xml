<com.handy.portal.ui.layout.SlideUpPanelLayout
    android:id="@+id/slide_up_panel_container"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        tools:context=".LoginFragment"
        android:background="@drawable/ic_portal_login_bg">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/back_button"
            android:src="@drawable/abc_ic_ab_back_mtrl_am_alpha"
            android:background="@color/transparent"
            android:padding="5dp"/>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            >

            <ImageView
                android:id="@+id/logo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:contentDescription="@string/app_name"
                android:src="@drawable/ic_login_logo"/>

            <TextView
                android:text="@string/professional_portal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="30sp"
                android:gravity="center"
                android:textColor="@color/white"
                android:layout_marginTop="10dp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/login_instructions_text"
                android:text="@string/login_instructions_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center_horizontal"
                android:textSize="20sp"
                android:textColor="@color/white"/>


            <RelativeLayout
                android:id="@+id/phone_input_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                style="@style/LoginTextInputCell"
                >
                <com.handy.portal.ui.widget.PhoneInputTextView
                    android:id="@+id/phone_number_edit_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:ems="12"
                    android:digits="1234567890"
                    android:hint="@string/phone_number_hint"
                    android:layout_marginTop="30dp"
                    android:maxLength="14"
                    android:maxLines="1"
                    android:layout_centerVertical="true"
                    android:imeOptions="actionDone"
                    android:gravity="center_horizontal"
                    android:textColor="@color/white"
                    android:backgroundTint="@color/very_light_grey"
                    android:textColorHint="@color/very_light_grey"
                    android:clickable="false"
                    android:editable="true"
                    android:enabled="true"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/pin_code_input_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                style="@style/LoginTextInputCell"
                android:visibility="gone"
                >
                <com.handy.portal.ui.widget.PinCodeInputTextView
                    android:id="@+id/pin_code_edit_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:ems="12"
                    android:hint="@string/pin_code_hint"
                    android:layout_marginTop="30dp"
                    android:maxLength="4"
                    android:maxLines="1"
                    android:layout_centerVertical="true"
                    android:gravity="center_horizontal"
                    android:textColor="@color/white"
                    android:backgroundTint="@color/very_light_grey"
                    android:textColorHint="@color/very_light_grey"
                    />
            </RelativeLayout>

            <Button
                android:id="@+id/login_button"
                android:text="@string/request_pin"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:gravity="center_vertical|center_horizontal"
                style="@style/Button.Green.Round"
                android:layout_marginTop="10dp"
                android:textAllCaps="false"
                android:textSize="20sp"
                />

            <TextView
                android:id="@+id/login_help_button"
                android:text="@string/login_need_help"
                android:layout_marginTop="20dp"
                android:gravity="center_horizontal"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />

        </LinearLayout>

    </RelativeLayout>
</com.handy.portal.ui.layout.SlideUpPanelLayout>
