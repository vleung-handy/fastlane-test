<?xml version="1.0" encoding="utf-8"?>
<RadioGroup
    android:id="@+id/nav_tray_links"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    >

    <RadioButton
        android:id="@+id/nav_link_payments"
        style="@style/TrayButton"
        android:drawableLeft="@drawable/tray_button_payments"
        android:text="@string/payments"
        />

    <RadioButton
        android:id="@+id/nav_link_ratings_and_feedback"
        style="@style/TrayButton"
        android:drawableLeft="@drawable/tray_ratings_and_feedback"
        android:text="@string/ratings_and_feedback"
        />

    <RadioButton
        style="@style/TrayButton"
        android:layout_height="1dp"
        android:layout_margin="@dimen/row_margin"
        android:background="@drawable/divider_grey"
        />

    <RadioButton
        android:id="@+id/nav_link_refer_a_friend"
        style="@style/TrayButton"
        android:drawableLeft="@drawable/tray_refer_a_friend"
        android:text="@string/refer_a_friend"
        />

    <RadioButton
        style="@style/TrayButton"
        android:layout_height="1dp"
        android:layout_margin="@dimen/row_margin"
        android:background="@drawable/divider_grey"
        />

    <RadioButton
        android:id="@+id/nav_link_account_settings"
        style="@style/TrayButton"
        android:drawableLeft="@drawable/tray_account_settings"
        android:text="@string/account_settings"
        />

    <RadioButton
        android:id="@+id/nav_link_help"
        style="@style/TrayButton"
        android:drawableLeft="@drawable/tray_button_help"
        android:text="@string/help"
        />

</RadioGroup>
