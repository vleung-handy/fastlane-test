<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/tab_bottom_padding"
    android:paddingTop="@dimen/tab_top_padding"
    >

    <CheckBox
        android:id="@+id/checklist_item_check_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:button="@drawable/selector_blue_checkbox"
        android:clickable="false"
        android:visibility="gone"
        />

    <TextView
        android:id="@+id/checklist_item_bullet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:text="@string/bullet"
        android:textSize="@dimen/default_text_size"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/extra_margin_medium"
        android:orientation="vertical"
        android:paddingTop="@dimen/thin_padding"
        >

        <TextView
            android:id="@+id/checklist_item_title"
            style="@style/CircularBold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/lineSpacing"
            android:textColor="@color/black"
            android:textSize="@dimen/default_text_size"
            android:visibility="gone"
            tools:text="Kitchen"
            />

        <TextView
            android:id="@+id/checklist_item_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="false"
            android:textColor="@color/black"
            android:textSize="@dimen/default_text_size"
            tools:text="Load dishwasher, wipe surfaces, and clean sink."
            />
    </LinearLayout>
</LinearLayout>
