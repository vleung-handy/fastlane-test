<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              tools:context=".AvailableBookingsFragment">

    <TextView
        android:id="@+id/available_bookings_banner_text"
        style="@style/Banner"
        android:text="@string/available_jobs"/>

    <include layout="@layout/loading_layout"/>

    <LinearLayout
        android:id="@+id/bookings_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone">

        <HorizontalScrollView
            android:id="@+id/available_bookings_dates_scroll_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none">

            <LinearLayout
                android:id="@+id/available_bookings_dates_scroll_view_layout"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal">
            </LinearLayout>
        </HorizontalScrollView>

        <LinearLayout
            android:id="@+id/available_bookings_empty"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="50dp"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:layout_marginStart="50dp"
                android:gravity="center_horizontal"
                android:text="@string/no_available_jobs"
                android:textColor="@color/subtitle_grey"
                android:textSize="20sp"/>
        </LinearLayout>

        <com.handy.portal.ui.form.BookingListView
            android:id="@+id/available_jobs_list_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:divider="@color/white_trans"
            android:dividerHeight="1dp"/>
    </LinearLayout>

</LinearLayout>
