<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".AvailableBookingsFragment">

    <TextView android:text="AVAIL BOOK" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <BookingListView
        android:layout_width="wrap_content"
        android:layout_height="335dp"
        android:id="@+id/availableJobsListView"
        android:layout_gravity="center"
        android:dividerHeight="10dp" />

    <HorizontalScrollView
        android:layout_width="306dp"
        android:layout_height="65dp"
        android:id="@+id/datesScrollView"
        android:layout_gravity="center_horizontal|top" >

        <LinearLayout
            android:id="@+id/datesScrollViewLayout"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></LinearLayout>
    </HorizontalScrollView>
</FrameLayout>
