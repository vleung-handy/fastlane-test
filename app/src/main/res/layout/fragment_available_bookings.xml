<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              tools:context=".AvailableBookingsFragment">

    <TextView
        android:id="@+id/available_bookings_banner_text"
        style="@style/Banner"
        android:text="@string/available_jobs"/>

    <HorizontalScrollView
        android:id="@+id/available_bookings_dates_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:id="@+id/available_bookings_dates_scroll_view_layout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">
        </LinearLayout>
    </HorizontalScrollView>



    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        >
        <com.handy.portal.ui.form.BookingListView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/available_jobs_requested_list_view"
            android:dividerHeight="1dp"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="15dp"
            android:id="@+id/section_spacer"/>

        <com.handy.portal.ui.form.BookingListView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/available_jobs_unrequested_list_view"
            android:dividerHeight="1dp"
            />

    </LinearLayout>

</LinearLayout>
