<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
    >

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <LinearLayout
            android:id="@+id/bookings_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <HorizontalScrollView
                android:id="@+id/available_bookings_dates_scroll_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none"
                >

                <LinearLayout
                    android:id="@+id/available_bookings_dates_scroll_view_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    >
                </LinearLayout>

            </HorizontalScrollView>

            <include layout="@layout/layout_fetch_error"/>

            <include layout="@layout/element_same_day_notification_toggle"/>

            <include tools:visibility="gone" android:id="@+id/layout_job_access_locked" layout="@layout/layout_job_access_locked"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >

                <com.handy.portal.ui.widget.SafeSwipeRefreshLayout
                    android:id="@+id/refresh_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        >
                        <com.handy.portal.bookings.ui.element.BookingListView
                            android:id="@+id/available_jobs_list_view"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:divider="@color/white_trans"
                            android:dividerHeight="1dp"
                            android:paddingTop="1dp"
                            />
                        <include tools:visibility="visible" layout="@layout/layout_available_bookings_empty"/>

                    </LinearLayout>

                </com.handy.portal.ui.widget.SafeSwipeRefreshLayout>

            </RelativeLayout>

        </LinearLayout>

    </android.support.design.widget.CoordinatorLayout>

</LinearLayout>
