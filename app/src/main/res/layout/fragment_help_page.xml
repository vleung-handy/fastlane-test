<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/handy_bg"
    tools:context=".HelpFragment"
    >

    <FrameLayout
        android:id="@+id/nav_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/nav_text"
            android:paddingRight="44dp"
            android:paddingLeft="44dp"
            android:text="@string/help"
            style="@style/TextView.Navbar" />

        <RelativeLayout
            android:id="@+id/menu_button_layout"
            />

        <ImageView
            android:id="@+id/close_img"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="15dp"
            android:src="@drawable/ic_x"
            android:visibility="visible"
            android:contentDescription="@string/close"
            android:layout_gravity="end|center_vertical" />

        <ImageView
            android:id="@+id/back_img"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:scaleX="-1"
            android:padding="15dp"
            android:src="@drawable/ic_chevron"
            android:visibility="gone"
            android:contentDescription="@string/back"
            android:layout_gravity="start|center_vertical" />

    </FrameLayout>

    <ScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/nav_layout">

        <RelativeLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:padding="@dimen/default_margin">

            <RelativeLayout
                android:id="@+id/help_header"
                android:layout_width="match_parent"
                android:layout_height="142dp"
                android:gravity="center"
                android:padding="@dimen/default_padding"
                android:background="@drawable/help_header_purple">

                <ImageView
                    android:id="@+id/help_icon"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="6dp"
                    android:src="@drawable/ic_help_lifesaver"
                    android:contentDescription="help" />

                <TextView
                    android:id="@+id/help_header_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/help_icon"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:textSize="20sp"
                    android:text="@string/what_can_help_with"
                    style="@style/TextView.Large.Med" />

            </RelativeLayout>

            <ImageView
                android:id="@+id/help_triangle"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignBottom="@id/help_header"
                android:layout_centerHorizontal="true"
                android:visibility="gone"
                android:src="@drawable/triangle" />

            <RelativeLayout
                android:id="@+id/info_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/help_header"
                android:background="@drawable/cell_booking_last_rounded">

                <TextView
                    android:id="@+id/info_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/default_padding"
                    style="@style/TextView" />

                <LinearLayout
                    android:id="@+id/cta_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/info_text"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="10dp"
                    android:visibility="gone"
                    android:orientation="vertical"
                    >
                    <Button
                        android:id="@+id/contact_button"
                        android:layout_marginLeft="@dimen/default_margin"
                        android:layout_marginRight="@dimen/default_margin"
                        android:text="@string/i_still_need_help"
                        android:layout_marginBottom="10dp"
                        style="@style/Button.Green.Round"
                        android:visibility="gone"
                        />
                    <!--empty view needed for bottom layout margin bug on older APIs-->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                    />

                </LinearLayout>

                <!--empty view needed for bottom layout margin bug on older APIs-->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_below="@id/cta_layout" />

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/nav_options_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/help_header"
                android:orientation="vertical"
                android:background="@android:color/transparent"
                android:visibility="gone" />

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>
