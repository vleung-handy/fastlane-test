<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
    >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/img_map_view"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:gravity="center"
        >
        <ImageView
            android:id="@+id/image_view"
            android:layout_width="@dimen/onboard_search_animation_width_height"
            android:layout_height="@dimen/onboard_search_animation_width_height"
            android:background="@drawable/onboarding_search_animation"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/onboard_loading"
            style="@style/TextView.Headline.XLarge.Bold"
            android:gravity="center"
            />
    </LinearLayout>


</RelativeLayout>
