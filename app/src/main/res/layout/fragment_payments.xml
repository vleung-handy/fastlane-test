<?xml version="1.0" encoding="utf-8"?>
<com.handy.portal.library.ui.layout.SlideUpPanelLayout
    android:id="@+id/slide_up_panel_container"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <ScrollView
        android:id="@+id/payments_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:overScrollMode="always"
        >

        <LinearLayout
            android:id="@+id/payments_content_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white_pressed"
            android:orientation="vertical"
            >

            <include layout="@layout/element_payments_batch_list"/>

        </LinearLayout>

    </ScrollView>

    <include layout="@layout/layout_fetch_error"/>

</com.handy.portal.library.ui.layout.SlideUpPanelLayout>
