<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <android.support.v7.widget.SwitchCompat
        android:id="@+id/availability_toggle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_white_bottom_border"
        android:paddingBottom="@dimen/default_padding"
        android:paddingEnd="@dimen/default_padding_half"
        android:paddingLeft="@dimen/default_padding"
        android:paddingRight="@dimen/default_padding_half"
        android:paddingStart="@dimen/default_padding"
        android:paddingTop="@dimen/default_padding"
        android:text="@string/i_am_available"
        android:textColor="@color/black"
        android:textSize="@dimen/default_text_size"
        />

    <LinearLayout
        android:id="@+id/time_range"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/availability_toggle"
        android:background="@color/border_gray"
        android:orientation="horizontal"

        >

        <TextView
            android:id="@+id/start_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="1dp"
            android:layout_marginRight="1dp"
            android:layout_weight="1"
            android:background="@color/handy_bg"
            android:gravity="center"
            android:padding="@dimen/default_padding"
            android:text="@string/start_time"
            android:textAppearance="@style/TextView.Small"
            />

        <FrameLayout
            android:id="@+id/end_time_holder"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/handy_bg"
            >

            <TextView
                android:id="@+id/end_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/end_time"
                android:textAppearance="@style/TextView.Small"
                />

            <ImageView
                android:id="@+id/reset_time_range"
                android:layout_width="@dimen/time_range_reset_button_size"
                android:layout_height="@dimen/time_range_reset_button_size"
                android:layout_gravity="center|end"
                android:layout_marginEnd="@dimen/default_margin_half"
                android:layout_marginRight="@dimen/default_margin_half"
                android:background="@drawable/circle_white_with_border"
                android:padding="@dimen/extra_padding_small"
                android:scaleType="fitXY"
                android:src="@drawable/ic_cancel_x"
                android:visibility="gone"
                tools:visibility="visible"
                />

        </FrameLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/time_range"
        android:background="@color/border_gray"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_above="@+id/save"
        android:layout_alignWithParentIfMissing="true"
        android:layout_below="@+id/time_range"
        android:layout_marginTop="1dp"
        android:background="@color/white"
        >

        <com.handy.portal.library.ui.view.timepicker.HandyTimePicker
            android:id="@+id/time_picker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:paddingTop="@dimen/default_padding"
            />

    </ScrollView>

    <Button
        android:id="@+id/save"
        style="@style/Button.Green"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="@string/save"
        android:visibility="gone"
        tools:visibility="visible"
        />

</RelativeLayout>
