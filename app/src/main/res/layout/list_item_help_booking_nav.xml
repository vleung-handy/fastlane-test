<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@drawable/cell_booking"
              android:gravity="center_vertical"
              android:orientation="horizontal"
              android:padding="16dp"
    >

    <ImageView
        android:id="@+id/icon"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:contentDescription="@string/navigation"
        android:src="@drawable/circle_teal"
        android:visibility="gone"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:id="@+id/service_text"
            style="@style/TextView.Small.Med"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:freezesText="false"
            android:maxLines="1"
            android:text="@string/service"
            android:textAllCaps="true"
            android:textColor="@color/steel"
            />

        <TextView
            android:id="@+id/date_text"
            style="@style/TextView.Med"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/service_text"
            android:ellipsize="end"
            android:freezesText="false"
            android:maxLines="1"
            android:text="@string/date"
            />

        <TextView
            android:id="@+id/time_text"
            style="@style/TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/date_text"
            android:ellipsize="end"
            android:freezesText="false"
            android:maxLines="1"
            android:text="@string/time"
            />

    </RelativeLayout>

</LinearLayout>
