<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white"
              android:orientation="vertical"
              android:paddingLeft="@dimen/extra_padding_large"
              android:paddingRight="@dimen/extra_padding_large"
              android:paddingTop="@dimen/extra_padding_large">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/job_instructions"
        android:textAppearance="@style/TextView.Bold"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:textStyle="bold"/>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/extra_margin_large"
        android:layout_marginTop="@dimen/extra_margin_large"
        android:src="@drawable/rectangle_gray"/>

    <TextView
        android:id="@+id/job_instructions_reveal_notice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/extra_margin_large"
        android:textColor="@color/black"
        android:textSize="@dimen/default_text_size"
        android:visibility="gone"/>

    <LinearLayout
        android:id="@+id/booking_details_job_instructions_list_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    </LinearLayout>

</LinearLayout>
