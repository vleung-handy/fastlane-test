<?xml version="1.0" encoding="utf-8"?>
<com.handy.portal.ui.element.payments.PaymentsBatchListItemView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/dark_grey_border_bottom"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/change_of_year"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:paddingBottom="@dimen/default_padding"
            android:paddingLeft="@dimen/payment_container_horizontal_padding"
            android:paddingRight="@dimen/payment_container_horizontal_padding"
            android:paddingTop="@dimen/default_padding"
            android:textColor="@color/payments_batch_list_entry_subtitle"
            android:textSize="@dimen/small_text_size"
            android:visibility="gone"
            />

    </LinearLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_vertical"
        android:background="@drawable/background_list_entry"
        android:paddingBottom="@dimen/payment_container_vertical_padding"
        android:paddingLeft="@dimen/payment_container_horizontal_padding"
        android:paddingRight="@dimen/payment_container_horizontal_padding"
        android:paddingTop="@dimen/payment_container_vertical_padding"
        android:stretchColumns="1"
        >

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:duplicateParentState="true">

            <TextView
                android:id="@+id/payments_batch_list_item_date_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:duplicateParentState="true"
                android:textAppearance="@style/TextView.Bold"
                android:textColor="@drawable/list_entry_title_text"
                android:textSize="@dimen/large_text_size"/>

            <TextView
                android:id="@+id/payments_batch_list_item_payment_amount_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:duplicateParentState="true"
                android:textAppearance="@style/HandyTextAppearanceTitle"
                android:textColor="@drawable/list_entry_title_text"/>

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:duplicateParentState="true">

            <TextView
                android:id="@+id/payments_batch_list_item_job_info_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center"
                android:duplicateParentState="true"
                android:textAppearance="@style/HandyTextAppearanceListEntrySubtitle"/>

            <TextView
                android:id="@+id/payments_batch_list_item_status_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center"
                android:duplicateParentState="true"
                android:textAllCaps="true"
                android:textAppearance="@style/TextView.Bold"
                android:textColor="@drawable/list_entry_subtitle_text"
                android:textSize="@dimen/xsmall_text_size"/>
        </TableRow>

    </TableLayout>

</com.handy.portal.ui.element.payments.PaymentsBatchListItemView>
