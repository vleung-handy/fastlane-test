<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bill_view_default_line_item_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_gravity="center"
    android:gravity="center"
    android:paddingTop="@dimen/default_padding_half"
    android:paddingBottom="@dimen/default_padding_half"
    >

    <TextView
        android:id="@+id/payment_breakdown_line_item_label_text"
        style="@style/TextView.Medium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Label"
        />

    <ImageView
        android:id="@+id/payment_breakdown_line_item_help_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/default_margin_half"
        android:layout_marginStart="@dimen/default_margin_half"
        android:src="@drawable/ic_question_gray"
        android:visibility="gone"
        tools:visibility="visible"
        />

    <android.support.v4.widget.Space
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        />


    <TextView
        android:id="@+id/payment_breakdown_line_item_amount_text"
        style="@style/TextView.Medium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="$70.50"
        />
</LinearLayout>
