<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/handy_bg"
    >

    <com.handy.portal.library.ui.view.AnimatedRecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:layoutAnimation="@anim/list_animation"
        android:paddingBottom="@dimen/onboard_claim_button_margin"
        />

    <include
        layout="@layout/layout_fetch_error"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />

</FrameLayout>
