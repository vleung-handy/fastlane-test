<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >
    <ImageView
        android:id="@+id/image_placeholder_google"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/img_map_placeholder"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/need_google_play"
        android:layout_above="@+id/map_placeholder_install_button"
        android:layout_centerHorizontal="true"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginBottom="20dp"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:gravity="center_horizontal"
        />

    <Button
        android:id="@+id/map_placeholder_install_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/install"
        android:layout_alignBottom="@+id/image_placeholder_google"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="33dp"
        style="@style/Button.Transparent"
        />

</RelativeLayout>
