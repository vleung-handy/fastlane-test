<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <com.hookedonplay.decoviewlib.DecoView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/dynamicArcView"
        />

    <RelativeLayout
        android:id="@+id/five_star_percentage_info_wrapper"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="invisible"
        >

        <TextView
            android:id="@+id/five_star_percentage_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="50sp"
            android:layout_centerInParent="true"
            android:paddingBottom="12dp"
            android:text="0"
            tools:text="80"
            />

        <TextView
            android:id="@+id/five_star_percentage_sign"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/five_star_percentage_number"
            android:layout_alignTop="@+id/five_star_percentage_number"
            android:layout_marginTop="@dimen/default_margin"
            android:textSize="@dimen/medium_text_size"
            android:text="@string/percentage"
            />

        <TextView
            android:id="@+id/five_star_percentage_sub_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/five_star_percentage_number"
            android:layout_centerHorizontal="true"
            android:textColor="@color/tertiary_grey"
            android:text="@string/five_star"
            />

    </RelativeLayout>

</RelativeLayout>