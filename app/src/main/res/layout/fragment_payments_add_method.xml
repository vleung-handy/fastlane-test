<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:background="@color/handy_bg"
              android:padding="@dimen/default_padding"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        app:optCardElevation="2dp"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <!--TODO: investigate: can cardview only have one child? if yes, find alternative way to style borders and remove this nesting-->
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!--TODO: replace background with a non-shadow border-->
            <android.support.design.widget.TabLayout
                android:background="@drawable/background_shadow_border"
                android:id="@+id/payments_update_bank_info_sliding_tabs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                app:tabMode="fixed" />
            <android.support.v4.view.ViewPager
                android:id="@+id/payments_update_bank_info_viewpager"
                android:layout_width="match_parent"
                android:layout_height="0px"
                android:layout_weight="1"
                android:background="@color/white" />
        </LinearLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>