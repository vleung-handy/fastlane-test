<com.handy.portal.ui.layout.SlideUpPanelLayout
    android:id="@+id/slide_up_panel_container"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <include layout="@layout/layout_fetch_error"/>

        <LinearLayout
            android:id="@+id/booking_details_main_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical"
            >

            <ScrollView
                android:id="@+id/booking_details_scroll_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <LinearLayout
                    android:id="@+id/wrapper_for_details_disclaimer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >

                    <LinearLayout
                        android:id="@+id/booking_details_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        >

                        <FrameLayout
                            android:id="@+id/booking_details_map_layout"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/booking_details_map_height"
                            android:orientation="vertical"
                            />

                        <FrameLayout
                            android:id="@+id/booking_details_date_layout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/booking_details_date_margin"
                            android:layout_marginTop="@dimen/booking_details_date_margin"
                            android:orientation="horizontal"
                            />

                        <FrameLayout
                            android:id="@+id/booking_details_title_layout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            />

                        <FrameLayout
                            android:id="@+id/booking_details_action_layout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            />

                        <FrameLayout
                            android:id="@+id/booking_details_contact_layout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/extra_margin_medium"
                            />

                        <FrameLayout
                            android:id="@+id/booking_details_job_instructions_layout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/extra_margin_medium"
                            android:orientation="horizontal"
                            />

                        <FrameLayout
                            android:id="@+id/booking_details_location_layout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/extra_margin_medium"
                            />

                        <FrameLayout
                            android:id="@+id/booking_details_support_layout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/extra_padding_medium"
                            android:background="@color/transparent"
                            android:padding="@dimen/extra_padding_large"
                            />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/booking_details_full_details_notice_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="@dimen/booking_details_notice_text_margin"
                        android:layout_marginTop="@dimen/booking_details_notice_text_margin"
                        android:text="@string/full_details_after_claim"
                        android:textColor="@color/helper_text_grey"
                        android:textSize="@dimen/small_text_size"
                        android:visibility="invisible"
                        />

                </LinearLayout>
            </ScrollView>
        </LinearLayout>
    </LinearLayout>
</com.handy.portal.ui.layout.SlideUpPanelLayout>
