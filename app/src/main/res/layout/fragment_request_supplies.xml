<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/default_padding"
    android:background="@color/white">

    <include layout="@layout/layout_fetch_error"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/request_supplies_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/supply_kit_includes"
                android:textColor="@color/text_light_grey"
                />

            <!--<ListView-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height=""></ListView>-->

            <LinearLayout
                android:id="@+id/supply_kit_contents_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/handy_bg"
                android:orientation="vertical"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/shipping_address"
                android:layout_marginTop="@dimen/default_margin_x2"
                android:textColor="@color/text_light_grey"
                />

            <TextView
                android:id="@+id/shipping_address_content_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/default_margin_x2"
                tools:text="The shipping address \n multiple lines \n are almost guaranteed"
                />

            <TextView
                style="@style/TextView.ActionText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/row_margin"
                android:text="@string/update"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/default_margin_x2"
                android:text="@string/withholding_amount"
                android:textColor="@color/text_light_grey"
                />

            <Button
                android:id="@+id/request_supplies_button"
                style="@style/Button.BookingAction.Green"
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/default_margin_x2"
                android:text="@string/complete_purchase"
                />

            <TextView
                android:id="@+id/complete_purchase_disclaimer_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/row_margin"
                android:gravity="center"
                android:text="@string/complete_purchase_disclaimer"
                />

        </LinearLayout>

    </ScrollView>
</LinearLayout>
