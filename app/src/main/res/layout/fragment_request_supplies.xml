<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/layout_fetch_error"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/request_supplies_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/handy_bg"
            android:orientation="vertical"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/supply_kit_includes"
                />

            <LinearLayout
                android:id="@+id/supply_kit_contents_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/handy_bg"
                android:orientation="vertical"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/shipping_address"
                />

            <TextView
                android:id="@+id/shipping_address_content_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="The shipping address \n multiple lines \n are almost guaranteed"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/update"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/withholding_amount"
                />

            <Button
                android:id="@+id/request_supplies_button"
                style="@style/Button.BookingAction.Green"
                android:layout_width="match_parent"
                android:text="@string/complete_purchase"
                />

            <TextView
                android:id="@+id/complete_purchase_disclaimer_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/complete_purchase_disclaimer"
                />

        </LinearLayout>

    </ScrollView>
</LinearLayout>
