<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    >

    <include layout="@layout/layout_fetch_error"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <LinearLayout
            android:id="@+id/request_supplies_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/default_padding"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/supply_kit_includes"
                android:textColor="@color/subtitle_grey"
                />

            <LinearLayout
                android:id="@+id/requested_supplies_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/row_margin"
                >

            </LinearLayout>

            <LinearLayout
                android:id="@+id/supply_kit_contents_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/handy_bg"
                android:orientation="vertical"
                />

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/shipping_address"
                android:layout_marginTop="@dimen/default_margin_x2"
                android:textColor="@color/subtitle_grey"
                />

            <TextView
                android:id="@+id/shipping_address_line_1_content_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/row_margin"
                android:textColor="@color/dark_grey"
                tools:text="shipping address line 1"
                />

            <TextView
                android:id="@+id/shipping_address_line_2_content_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/dark_grey"
                tools:text="shipping address line 2"
                />

            <!-- Hiding for now; will show for phase 2 -->
            <TextView
                android:id="@+id/update_shipping_address"
                style="@style/TextView.ActionText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/row_margin"
                android:text="@string/update"
                android:visibility="gone"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/default_margin_x2"
                android:text="@string/withholding_amount"
                android:textColor="@color/subtitle_grey"
                />

            <TextView

                android:id="@+id/request_supplies_withholding_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/row_margin"
                android:textColor="@color/dark_grey"
                />

            <Button
                android:id="@+id/request_supplies_button"
                style="@style/Button.BookingAction.Green"
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/default_margin_x2"
                android:text="@string/complete_purchase"
                android:layout_marginBottom="@dimen/default_margin"
                />

        </LinearLayout>

    </ScrollView>
</LinearLayout>
