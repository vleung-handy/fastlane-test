<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    >

    <com.handy.portal.bookings.ui.element.BookingDetailsSinglePaymentView
        android:id="@+id/minimum_payment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

    <TextView
        style="@style/TextView.Large.Bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/extra_margin"
        android:layout_marginRight="@dimen/extra_margin"
        android:text="@string/dash"
        />

    <com.handy.portal.bookings.ui.element.BookingDetailsSinglePaymentView
        android:id="@+id/maximum_payment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
</LinearLayout>
