<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="15dp"
    android:paddingBottom="15dp"
    android:background="@color/white"
    android:paddingLeft="15dp"
    android:paddingRight="15dp">

    <TextView
        android:id="@+id/booking_details_partner_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/airbnb"
        android:textColor="@color/partner_blue"
        android:textSize="14sp"
        android:textAppearance="@style/TextView.Bold"
        />

    <TextView
        android:id="@+id/booking_details_location_text"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="@string/location"
        android:textColor="@color/black"
        android:textSize="23sp"
        android:textStyle="bold"
        android:textAppearance="@style/TextView.Bold"
        android:layout_below="@+id/booking_details_partner_text"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:scrollHorizontally="false"
        />

    <TextView
        android:id="@+id/booking_details_frequency_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/booking_frequency_every_week"
        android:textColor="@color/very_light_grey"
        android:textSize="16sp"
        android:layout_below="@+id/booking_details_location_text"
        />

    <TextView
        android:id="@+id/booking_details_payment_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextView.Bold"
        android:text="$30"
        android:layout_alignTop="@id/booking_details_location_text"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textSize="30sp"
        android:textColor="@color/black"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/booking_details_payment_bonus_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="+$5 Bonus"
        android:layout_alignBottom="@+id/booking_details_frequency_text"
        android:layout_alignParentRight="true"
        android:textColor="@color/very_light_grey"
        android:textSize="12sp"/>

    <Button
        android:id="@+id/booking_details_action_button"
        android:text="@string/claim"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical|center_horizontal"
        android:layout_below="@+id/booking_details_frequency_text"
        style="@style/Button.Green.Round"
        android:layout_marginTop="10dp"
        android:textAllCaps="false"
        android:textSize="20sp"
        />

    <TextView
        android:id="@+id/booking_details_action_disclaimer_series_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/disclaimer_series"
        android:layout_below="@+id/booking_details_action_button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:visibility="invisible"/>
    <TextView
        android:id="@+id/booking_details_action_disclaimer_cancel_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/disclaimer_cancel"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="false"
        android:layout_below="@+id/booking_details_action_disclaimer_series_text"
        android:visibility="invisible"/>

</RelativeLayout>