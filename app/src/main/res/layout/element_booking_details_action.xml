<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Herald Square"
        android:id="@+id/booking_details_location_text" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Every 2 weeks"
        android:id="@+id/booking_details_frequency_text"
        android:layout_below="@+id/booking_details_location_text"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="$30"
        android:id="@+id/booking_details_payment_text"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="90dp"
        android:layout_marginEnd="90dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="+$5 Bonus"
        android:id="@+id/booking_details_payment_bonus_text"
        android:layout_below="@+id/booking_details_payment_text"
        android:layout_alignParentRight="true"
        android:layout_marginRight="63dp" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ACTION BUTTON"
        android:id="@+id/booking_details_action_button"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_below="@+id/booking_details_frequency_text"
        android:layout_toLeftOf="@+id/booking_details_payment_bonus_text"
        android:layout_toStartOf="@+id/booking_details_payment_bonus_text" />
</merge>