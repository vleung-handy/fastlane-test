<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/booking_details_display_message_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/default_margin"
    android:orientation="vertical"
    >

    <TextView
        android:id="@+id/booking_details_aux_text"
        style="@style/TextView.Medium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawablePadding="@dimen/default_padding_half"
        android:ellipsize="end"
        android:maxLines="1"
        tools:drawableLeft="@drawable/ic_aux_info_fav"
        tools:text="@string/customer_favorite_pro"
        android:visibility="gone"
        tools:visibility="visible"
        />

    <View
        android:id="@+id/booking_details_aux_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/default_margin"
        android:layout_marginBottom="@dimen/default_margin"
        android:background="@drawable/divider_gray"
        android:visibility="gone"
        tools:visibility="visible"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        >

        <ImageView
            android:id="@+id/booking_details_display_message_swap_indicator"
            android:layout_width="@dimen/job_cell_icon_size_half"
            android:layout_height="@dimen/job_cell_icon_size_half"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="@dimen/extra_margin"
            android:layout_marginRight="@dimen/extra_margin"
            android:src="@drawable/ic_swap"
            android:visibility="gone"
            tools:visibility="visible"
            />

        <TextView
            android:id="@+id/booking_details_display_message_title"
            style="@style/TextView.Large.Bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            tools:text="James D. requested you!"
            />
    </LinearLayout>

    <TextView
        android:id="@+id/booking_details_display_message_body_text"
        style="@style/TextView.Medium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/default_margin_half"
        tools:text="One of your past customers requested you for this job. If the match fails for any reason, we'll try to replace it with a similar job."
        />


</LinearLayout>
