<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/fetch_error_view"
              xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="center"
              android:orientation="vertical"
              android:visibility="gone"
    >

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_warning"/>

    <TextView
        android:id="@+id/fetch_error_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/error_margin_bottom"
        android:layout_marginLeft="@dimen/error_margin_side"
        android:layout_marginRight="@dimen/error_margin_side"
        android:layout_marginTop="@dimen/error_margin_top"
        android:gravity="center_horizontal"
        android:textColor="@color/subtitle_grey"
        android:textSize="@dimen/error_text"
        />

    <Button
        android:id="@+id/try_again_button"
        style="@style/Button.PartnerBlueEmpty.Round"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/try_again"
        android:textAllCaps="false"
        android:textSize="@dimen/error_text"
        />
</LinearLayout>
