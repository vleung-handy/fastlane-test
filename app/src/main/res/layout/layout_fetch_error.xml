<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/fetch_error_view"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/handy_bg"
    android:gravity="center"
    android:orientation="vertical"
    android:visibility="gone"
    tools:visibility="visible"
    >

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_warning"
        />

    <TextView
        android:id="@+id/fetch_error_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/error_margin_bottom"
        android:layout_marginLeft="@dimen/error_margin_side"
        android:layout_marginRight="@dimen/error_margin_side"
        android:layout_marginTop="@dimen/error_margin_top"
        android:gravity="center_horizontal"
        android:textColor="@color/tertiary_gray"
        android:textSize="@dimen/error_text"
        tools:text="@string/error_missing_server_data"
        />

    <Button
        android:id="@+id/try_again_button"
        style="@style/Button.PartnerBlueEmpty.Round"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minHeight="0dp"
        android:padding="@dimen/default_padding_half"
        android:text="@string/try_again"
        android:textAllCaps="false"
        android:textSize="@dimen/small_text_size"
        />
</LinearLayout>
