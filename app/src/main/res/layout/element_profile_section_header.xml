<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/grey_border_bottom"
    android:orientation="vertical"
    android:padding="@dimen/default_padding">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:id="@+id/profile_section_header_title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="@string/your_contact_information"
            android:textAppearance="@style/TextView.Bold"
            android:textColor="@color/black"
            android:textSize="@dimen/large_text_size"
            />

        <TextView
            android:id="@+id/profile_section_update"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="@string/update"
            android:textAllCaps="true"
            android:textAppearance="@style/TextView.Bold"
            android:textColor="@color/handy_blue"
            android:textSize="@dimen/large_text_size"
            android:visibility="gone"
            />

    </RelativeLayout>

    <TextView
        android:id="@+id/profile_section_header_subtitle_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"/>

</LinearLayout>
