<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <include layout="@layout/layout_fetch_error"/>

    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/dashboard_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <com.handy.portal.ui.element.dashboard.WelcomeProPerformanceView
                android:id="@+id/welcome_pro_performance_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />

            <com.handy.portal.ui.element.dashboard.RatingsProPerformanceView
                android:id="@+id/ratings_performance_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />

            <com.handy.portal.ui.element.dashboard.DashboardOptionsPerformanceView
                android:id="@+id/dashboard_options_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/section_item_margin"
                android:orientation="horizontal"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="Lifetime Rating "
                    android:textColor="@color/black"
                    android:textSize="@dimen/medium_text_size"
                    />

                <TextView
                    android:id="@+id/lifetime_rating_text"
                    style="@style/TextView.Medium.Bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="4.8"
                    />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/section_item_margin"
                android:gravity="center_horizontal"
                android:text="*must maintain at least a 4.2"
                android:textColor="@color/tertiary_grey"
                android:textSize="@dimen/small_text_size"
                />

        </LinearLayout>

    </ScrollView>

</FrameLayout>
