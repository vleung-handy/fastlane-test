<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white"
              android:orientation="vertical"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingEnd="@dimen/default_padding"
            android:paddingLeft="@dimen/default_padding"
            android:paddingRight="@dimen/default_padding"
            android:paddingStart="@dimen/default_padding"
            android:paddingTop="@dimen/extra_padding_xlarge"
            >

            <Space
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1.5"
                />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/jobs"
                android:textAppearance="@style/TextView.Bold"
                android:textColor="@color/black"
                android:textSize="@dimen/small_text_size"
                />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/rate"
                android:textAppearance="@style/TextView.Bold"
                android:textColor="@color/black"
                android:textSize="@dimen/small_text_size"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/default_padding"
            android:paddingEnd="@dimen/default_padding"
            android:paddingLeft="@dimen/default_padding"
            android:paddingRight="@dimen/default_padding"
            android:paddingStart="@dimen/default_padding"
            >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.5"
                android:orientation="vertical"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/current_week"
                    android:textAppearance="@style/TextView.Bold"
                    android:textColor="@color/handy_blue"
                    android:textSize="@dimen/default_text_size"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:text="@string/current_week_description"
                    android:textAppearance="@style/TextView.Bold"
                    android:textColor="@color/bg_inactive_grey"
                    android:textSize="@dimen/xsmall_text_size"
                    />

            </LinearLayout>

            <TextView
                android:id="@+id/jobs_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/no_data"
                android:textAppearance="@style/TextView.Bold"
                android:textColor="@color/handy_blue"
                android:textSize="@dimen/xxlarge_text_size"
                tools:text="3"
                />

            <TextView
                android:id="@+id/rate_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/no_data"
                android:textAppearance="@style/TextView.Bold"
                android:textColor="@color/handy_blue"
                android:textSize="@dimen/xxlarge_text_size"
                tools:text="$15"
                />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider_height"
            android:background="@color/tertiary_gray"
            />

        <TextView
            style="@style/CircularBold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/default_margin"
            android:layout_marginLeft="@dimen/default_margin"
            android:layout_marginRight="@dimen/default_margin"
            android:layout_marginStart="@dimen/default_margin"
            android:layout_marginTop="@dimen/default_margin"
            android:text="@string/new_weekly_tiers"
            android:textColor="@color/black"
            android:textSize="@dimen/large_text_size"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/default_margin"
            android:layout_marginLeft="@dimen/default_margin"
            android:layout_marginRight="@dimen/default_margin"
            android:layout_marginStart="@dimen/default_margin"
            android:layout_marginTop="@dimen/default_margin"
            android:lineSpacingMultiplier="1.2"
            android:text="@string/tier_description"
            android:textColor="@color/black"
            android:textSize="@dimen/default_text_size"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/default_margin"
            android:orientation="horizontal"
            >

            <TextView
                style="@style/CircularBold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/note_colon"
                android:textColor="@color/black"
                android:textSize="@dimen/default_text_size"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingEnd="@dimen/extra_padding"
                android:paddingLeft="@dimen/extra_padding"
                android:paddingRight="@dimen/extra_padding"
                android:paddingStart="@dimen/extra_padding"
                android:text="@string/tier_reset_note"
                android:textColor="@color/black"
                android:textSize="@dimen/default_text_size"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/default_margin_half"
            android:layout_marginEnd="@dimen/default_margin_medium"
            android:layout_marginLeft="@dimen/default_margin_medium"
            android:layout_marginRight="@dimen/default_margin_medium"
            android:layout_marginStart="@dimen/default_margin_medium"
            android:layout_marginTop="@dimen/default_margin_medium"
            android:orientation="horizontal"
            >

            <TextView
                style="@style/CircularBold"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="start"
                android:text="@string/tiers"
                android:textColor="@color/black"
                android:textSize="@dimen/default_text_size"
                />

            <TextView
                style="@style/CircularBold"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:text="@string/jobs"
                android:textColor="@color/black"
                android:textSize="@dimen/default_text_size"
                />

            <TextView
                style="@style/CircularBold"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="end"
                android:text="@string/rate"
                android:textColor="@color/black"
                android:textSize="@dimen/default_text_size"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/default_margin_half"
            android:layout_marginEnd="@dimen/default_margin_medium"
            android:layout_marginLeft="@dimen/default_margin_medium"
            android:layout_marginRight="@dimen/default_margin_medium"
            android:layout_marginStart="@dimen/default_margin_medium"
            android:layout_marginTop="@dimen/default_margin_half"
            android:orientation="horizontal"
            >

            <ImageView
                android:id="@+id/tier_one_dot"
                android:layout_width="7dp"
                android:layout_height="7dp"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="5dp"
                android:layout_marginRight="5dp"
                android:src="@drawable/circle_handy_blue"
                android:visibility="gone"
                tools:visibility="visible"
                />

            <TextView
                android:id="@+id/tier_one_text"
                style="@style/CircularBold"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="start"
                android:text="@string/tier_one"
                android:textColor="@color/tertiary_gray"
                android:textSize="@dimen/default_text_size"
                tools:textColor="@color/handy_blue"
                />

            <TextView
                android:id="@+id/tier_one_jobs_text"
                style="@style/CircularBold"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:textColor="@color/tertiary_gray"
                android:textSize="@dimen/default_text_size"
                tools:text="0 \u2013 3"
                tools:textColor="@color/handy_blue"
                />

            <TextView
                android:id="@+id/tier_one_rate_text"
                style="@style/CircularBold"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="end"
                android:textColor="@color/tertiary_gray"
                android:textSize="@dimen/default_text_size"
                tools:text="$15"
                tools:textColor="@color/handy_blue"
                />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider_height"
            android:layout_marginEnd="@dimen/default_margin"
            android:layout_marginLeft="@dimen/default_margin"
            android:layout_marginRight="@dimen/default_margin"
            android:layout_marginStart="@dimen/default_margin"
            android:background="@color/list_divider"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/default_margin_half"
            android:layout_marginEnd="@dimen/default_margin_medium"
            android:layout_marginLeft="@dimen/default_margin_medium"
            android:layout_marginRight="@dimen/default_margin_medium"
            android:layout_marginStart="@dimen/default_margin_medium"
            android:layout_marginTop="@dimen/default_margin_half"
            android:orientation="horizontal"
            >

            <ImageView
                android:id="@+id/tier_two_dot"
                android:layout_width="7dp"
                android:layout_height="7dp"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="5dp"
                android:layout_marginRight="5dp"
                android:src="@drawable/circle_handy_blue"
                android:visibility="gone"
                />

            <TextView
                android:id="@+id/tier_two_text"
                style="@style/CircularBold"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="start"
                android:text="@string/tier_two"
                android:textColor="@color/tertiary_gray"
                android:textSize="@dimen/default_text_size"
                />

            <TextView
                android:id="@+id/tier_two_jobs_text"
                style="@style/CircularBold"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:textColor="@color/tertiary_gray"
                android:textSize="@dimen/default_text_size"
                tools:text="4 \u2013 8"
                />

            <TextView
                android:id="@+id/tier_two_rate_text"
                style="@style/CircularBold"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="end"
                android:textColor="@color/tertiary_gray"
                android:textSize="@dimen/default_text_size"
                tools:text="$17"
                />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider_height"
            android:layout_marginEnd="@dimen/default_margin"
            android:layout_marginLeft="@dimen/default_margin"
            android:layout_marginRight="@dimen/default_margin"
            android:layout_marginStart="@dimen/default_margin"
            android:background="@color/list_divider"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/default_margin_half"
            android:layout_marginEnd="@dimen/default_margin_medium"
            android:layout_marginLeft="@dimen/default_margin_medium"
            android:layout_marginRight="@dimen/default_margin_medium"
            android:layout_marginStart="@dimen/default_margin_medium"
            android:layout_marginTop="@dimen/default_margin_half"
            android:orientation="horizontal"
            >

            <ImageView
                android:id="@+id/tier_three_dot"
                android:layout_width="7dp"
                android:layout_height="7dp"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="5dp"
                android:layout_marginRight="5dp"
                android:src="@drawable/circle_handy_blue"
                android:visibility="gone"
                />

            <TextView
                android:id="@+id/tier_three_text"
                style="@style/CircularBold"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="start"
                android:text="@string/tier_three"
                android:textColor="@color/tertiary_gray"
                android:textSize="@dimen/default_text_size"
                />

            <TextView
                android:id="@+id/tier_three_jobs_text"
                style="@style/CircularBold"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:textColor="@color/tertiary_gray"
                android:textSize="@dimen/default_text_size"
                tools:text="9+"
                />

            <TextView
                android:id="@+id/tier_three_rate_text"
                style="@style/CircularBold"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="end"
                android:textColor="@color/tertiary_gray"
                android:textSize="@dimen/default_text_size"
                tools:text="$19"
                />

        </LinearLayout>
    </LinearLayout>
    </ScrollView>


</LinearLayout>

