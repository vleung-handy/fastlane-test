<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.handy.portal.ui.activity.OnboardActivity"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/particle_view_width_margin"
        >

        <View
            android:id="@+id/left_view"
            android:layout_width="@dimen/particle_view_width"
            android:layout_height="@dimen/particle_view_width"
            android:layout_weight="1"
            />

        <View
            android:id="@+id/left_center_view"
            android:layout_width="@dimen/particle_view_width"
            android:layout_height="@dimen/particle_view_width"
            android:layout_weight="1"
            />

        <View
            android:id="@+id/middle_view"
            android:layout_width="@dimen/particle_view_width"
            android:layout_height="@dimen/particle_view_width"
            android:layout_weight="1"
            />

        <View
            android:id="@+id/right_center_view"
            android:layout_width="@dimen/particle_view_width"
            android:layout_height="@dimen/particle_view_width"
            android:layout_weight="1"
            />

        <View
            android:id="@+id/right_view"
            android:layout_width="@dimen/particle_view_width"
            android:layout_height="@dimen/particle_view_width"
            android:layout_weight="1"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        >

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="@string/onboard_congratulations"
            style="@style/TextView.XXLarge.Bold"
            android:layout_marginLeft="@dimen/default_margin_x3"
            android:layout_marginRight="@dimen/default_margin_x3"
            android:gravity="center"
            />

        <TextView
            android:id="@+id/tv_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/default_margin"
            android:textSize="18sp"
            android:gravity="center"
            android:text="@string/onboard_welcome"
            android:layout_marginRight="@dimen/default_margin_x2"
            android:layout_marginLeft="@dimen/default_margin_x2"
            />
    </LinearLayout>

    <Button
        android:id="@+id/btn_next"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/onboard_get_started"
        android:layout_alignParentBottom="true"
        style="@style/Button.Green"
        />
</RelativeLayout>
