<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="6dp">

        <LinearLayout
            android:id="@+id/booking_entry_find_job_row"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border_gray_bg_white"
            android:orientation="horizontal"
            android:padding="10dp">

            <TextView
                android:id="@+id/booking_entry_find_job"
                style="@style/TextView.Medium.Bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="6dp"
                android:layout_marginRight="6dp"
                android:drawableLeft="@drawable/ic_search_blue"
                android:drawablePadding="8dp"
                android:gravity="center_vertical"
                android:text="@string/find_matching_jobs"
                android:textColor="@color/handy_blue_text"
                tools:text="Find Matching Jobs" />

            <TextView
                android:id="@+id/booking_entry_find_job_time"
                style="@style/TextView.Medium"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="right|center_vertical"
                android:textColor="@color/tertiary_gray" />

        </LinearLayout>
</FrameLayout>
