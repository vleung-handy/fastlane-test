<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/default_padding_half"
    android:paddingEnd="@dimen/default_padding"
    android:paddingLeft="@dimen/default_padding"
    android:paddingRight="@dimen/default_padding"
    android:paddingStart="@dimen/default_padding"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border_gray"
        android:orientation="vertical"
        android:padding="1dp"
        >

        <TextView
            android:id="@+id/dismissible_booking_aux_text"
            style="@style/TextView.Small"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/default_margin_half"
            android:layout_marginLeft="@dimen/default_margin"
            android:layout_marginRight="@dimen/default_margin"
            android:layout_marginTop="@dimen/default_margin_half"
            android:drawablePadding="@dimen/default_padding_half"
            android:ellipsize="end"
            android:maxLines="1"
            android:visibility="gone"
            tools:drawableLeft="@drawable/ic_aux_info_fav"
            tools:text="@string/customer_favorite_pro"
            tools:visibility="visible"
            />

        <View
            android:id="@+id/dismissible_booking_aux_divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@drawable/divider_gray"
            android:visibility="gone"
            tools:visibility="visible"
            />

        <FrameLayout
            android:id="@+id/available_booking_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
    </LinearLayout>
</FrameLayout>
