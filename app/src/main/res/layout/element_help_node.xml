<?xml version="1.0" encoding="utf-8"?>

<com.handy.portal.ui.view.HelpNodeView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/help_node_content"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:background="@color/white"
    >

    <RelativeLayout
        android:id="@+id/info_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/cell_booking_last_rounded">

        <com.handy.portal.ui.element.HandyWebView
            android:id="@+id/help_webview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <Button
            android:id="@+id/contact_button"
            android:layout_marginLeft="@dimen/default_margin"
            android:layout_marginRight="@dimen/default_margin"
            android:layout_below="@id/help_webview"
            android:text="@string/i_still_need_help"
            android:layout_marginBottom="10dp"
            style="@style/Button.Green.Round"
            android:visibility="gone"
            />

        <LinearLayout
            android:id="@+id/cta_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/contact_button"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="10dp"
            android:visibility="gone"
            android:orientation="vertical"
            />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/nav_options_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/info_layout"
        android:orientation="vertical"
        android:background="@android:color/transparent"
        android:visibility="gone" />

</com.handy.portal.ui.view.HelpNodeView>