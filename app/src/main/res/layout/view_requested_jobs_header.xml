<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingEnd="@dimen/default_padding"
    android:paddingLeft="@dimen/default_padding"
    android:paddingRight="@dimen/default_padding"
    android:paddingStart="@dimen/default_padding"
    android:paddingTop="@dimen/default_padding"
    >

    <TextView
        android:id="@+id/title"
        style="@style/TextView.Large.Bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Exclusive Requests"
        />

    <ImageView
        android:id="@+id/help_icon"
        android:layout_width="@dimen/default_icon_size_half"
        android:layout_height="@dimen/default_icon_size_half"
        android:layout_marginLeft="@dimen/extra_margin"
        android:layout_marginStart="@dimen/extra_margin"
        android:padding="@dimen/extra_padding_xsmall"
        android:src="@drawable/ic_question_gray"
        />

</LinearLayout>
