<?xml version="1.0" encoding="utf-8"?>
<com.handy.portal.payments.ui.element.PaymentsDetailItemView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_vertical"
    android:background="@drawable/background_list_entry"
    android:divider="@drawable/divider_gray"
    android:dividerHeight="1dp"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/payment_container_vertical_padding"
    android:paddingLeft="@dimen/payment_container_horizontal_padding"
    android:paddingRight="@dimen/payment_container_horizontal_padding"
    android:paddingTop="@dimen/payment_container_vertical_padding"
    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingEnd="@dimen/payment_container_vertical_padding"
        android:paddingRight="@dimen/payment_container_vertical_padding"
        >

        <TextView
            android:id="@+id/payments_detail_month_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textAppearance="@style/HandyTextAppearanceSmall"
            />

        <TextView
            android:id="@+id/payments_detail_date_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textAppearance="@style/HandyTextAppearanceTitle"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="2"
        android:orientation="vertical"
        android:paddingLeft="@dimen/extra_padding"
        android:paddingStart="@dimen/extra_padding"
        >

        <TextView
            android:id="@+id/payments_detail_location_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextView.Bold"
            android:textColor="@color/black"
            android:textSize="@dimen/large_text_size"
            />

        <TextView
            android:id="@+id/payments_detail_time_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="@style/HandyTextAppearanceListEntrySubtitle"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        >

        <TextView
            android:id="@+id/payments_detail_payment_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:textAppearance="@style/HandyTextAppearanceTitle"
            />
    </LinearLayout>
</com.handy.portal.payments.ui.element.PaymentsDetailItemView>
