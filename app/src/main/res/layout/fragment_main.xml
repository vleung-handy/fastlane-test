<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivityFragment"
    >

    <FrameLayout
        android:id="@+id/main_container"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@+id/tabs" />

    <RadioGroup
        android:id="@+id/tabs"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:background="@color/light_grey"
        android:weightSum="4">

        <RadioButton
            android:id="@+id/button_jobs"
            android:drawableTop="@drawable/tab_button_jobs"
            android:layout_weight="1"
            style="@style/TabButton"
            android:text="@string/tab_jobs" />

        <RadioButton
            android:id="@+id/button_schedule"
            android:drawableTop="@drawable/tab_button_schedule"
            android:layout_weight="1"
            style="@style/TabButton"
            android:text="@string/tab_schedule"
            android:checked="false" />

        <RadioButton
            android:id="@+id/button_profile"
            android:drawableTop="@drawable/tab_button_profile"
            android:layout_weight="1"
            style="@style/TabButton"
            android:text="@string/tab_profile" />

        <RadioButton
            android:id="@+id/button_help"
            android:drawableTop="@drawable/tab_button_help"
            android:layout_weight="1"
            style="@style/TabButton"
            android:text="@string/tab_help" />

    </RadioGroup>

    <com.handy.portal.ui.element.TransitionOverlayView
        android:id="@+id/transition_overlay"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/dark_grey"
        android:visibility="invisible">
        <ImageView
            android:id="@+id/transition_overlay_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/black"
            android:src="@drawable/circle_green"
            android:layout_gravity="center"
            android:layout_centerInParent="true"/>
        <TextView
            android:id="@+id/transition_overlay_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/job_claim_success"
            android:layout_gravity="center"
            android:textSize="20sp"
            android:layout_below="@id/transition_overlay_image"
            android:layout_centerHorizontal="true"
            android:textColor="@color/white"
            android:layout_marginTop="10dp"/>
    </com.handy.portal.ui.element.TransitionOverlayView>

</RelativeLayout>
