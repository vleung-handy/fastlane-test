<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivityFragment">

    <FrameLayout
        android:id="@+id/main_container"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@+id/tabs" />

    <RadioGroup
        android:id="@+id/tabs"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:background="@color/light_grey"
        android:weightSum="4">

        <RadioButton
            android:id="@+id/button_jobs"
            android:drawableTop="@drawable/ic_menu_jobs"
            android:layout_weight="1"
            style="@style/TabButton"
            android:text="@string/tab_jobs" />

        <RadioButton
            android:id="@+id/button_schedule"
            android:drawableTop="@drawable/ic_menu_schedule"
            android:layout_weight="1"
            style="@style/TabButton"
            android:text="@string/tab_schedule"
            android:checked="false" />

        <RadioButton
            android:id="@+id/button_profile"
            android:drawableTop="@drawable/ic_menu_profile"
            android:layout_weight="1"
            style="@style/TabButton"
            android:text="@string/tab_profile" />

        <RadioButton
            android:id="@+id/button_help"
            android:drawableTop="@drawable/ic_menu_help"
            android:layout_weight="1"
            style="@style/TabButton"
            android:text="@string/tab_help" />

    </RadioGroup>

</RelativeLayout>
