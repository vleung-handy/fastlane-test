<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/bullet"
        android:textSize="@dimen/default_text_size"
        />

    <TextView
        android:id="@+id/text_with_bullet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/extra_margin_medium"
        android:layout_marginStart="@dimen/extra_margin_medium"
        android:lineSpacingExtra="@dimen/lineSpacing"
        android:textColor="@color/black"
        android:textColorLink="@color/handy_blue"
        android:textIsSelectable="true"
        android:textSize="@dimen/default_text_size"
        tools:text="Hello"
        />

</LinearLayout>
