<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:animateLayoutChanges="true"
            android:orientation="vertical"
            >

            <LinearLayout
                android:id="@+id/available_hours_info_banner_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/default_margin_half"
                android:background="@color/white"
                android:orientation="vertical"
                android:paddingBottom="@dimen/default_padding_medium"
                android:paddingLeft="@dimen/default_padding"
                android:paddingRight="@dimen/default_padding"
                android:paddingTop="@dimen/default_padding_medium"
                >

                <TextView
                    style="@style/TextView.Medium.Bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/available_hours_info_banner_header"
                    />

                <TextView
                    android:id="@+id/available_hours_info_banner_body"
                    style="@style/TextView.Small"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/available_hours_info_banner_body"
                    android:textColorLink="@color/handy_blue"
                    />
            </LinearLayout>

            <android.support.design.widget.TabLayout
                android:id="@+id/available_hours_tab_layout"
                style="@style/TextView.Large"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:tabBackground="@drawable/tab"
                app:tabIndicatorColor="@color/handy_blue"
                app:tabIndicatorHeight="2dp"
                app:tabSelectedTextColor="@color/white"
                app:tabTextAppearance="@style/TextAppearance.TabText"
                app:tabTextColor="@color/white_trans"
                />

            <com.handy.portal.library.ui.view.DynamicHeightViewPager
                android:id="@+id/available_hours_view_pager"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:overScrollMode="never"
                app:layout_behavior="@string/appbar_scrolling_view_behavior"
                />

            <Button
                android:id="@+id/copy_hours_button"
                style="@style/Button.Transparent.Oval"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/default_margin"
                android:text="@string/copy_hours_from_current_week"
                android:textColor="@color/tertiary_gray"
                android:textSize="@dimen/small_text_size"
                android:visibility="gone"
                />

            <TextView
                style="@style/TextView.Small"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/default_margin"
                android:gravity="center"
                android:padding="@dimen/default_padding"
                android:text="@string/available_hours_info_footer"
                android:textColor="@color/tertiary_gray"
                />
        </LinearLayout>
    </ScrollView>

    <include
        layout="@layout/layout_fetch_error"
        tools:visibility="gone"
        />

</FrameLayout>
