<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <LinearLayout
        android:id="@+id/available_hours_info_banner_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="@dimen/default_padding_medium"
        android:paddingLeft="@dimen/default_padding"
        android:paddingRight="@dimen/default_padding"
        android:paddingTop="@dimen/default_padding_medium"
        >

        <TextView
            style="@style/TextView.Medium.Bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/available_hours_info_banner_header"
            />

        <TextView
            style="@style/TextView.Small"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/available_hours_info_banner_body"
            />
    </LinearLayout>

    <android.support.design.widget.TabLayout
        android:id="@+id/available_hours_tab_layout"
        android:layout_below="@id/available_hours_info_banner_layout"
        style="@style/TextView.Large"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tabBackground="@drawable/tab"
        app:tabIndicatorColor="@color/handy_blue"
        app:tabIndicatorHeight="2dp"
        app:tabSelectedTextColor="@color/white"
        app:tabTextAppearance="@style/TextAppearance.TabText"
        app:tabTextColor="@color/white_trans"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_below="@id/available_hours_tab_layout"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <com.handy.portal.library.ui.view.DynamicHeightViewPager
                android:id="@+id/available_hours_view_pager"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_behavior="@string/appbar_scrolling_view_behavior"
                />

            <Button
                android:id="@+id/copy_hours_button"
                style="@style/Button.Transparent.Oval"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="@dimen/default_margin"
                android:text="@string/copy_hours_from_current_week"
                android:textColor="@color/tertiary_gray"
                android:textSize="@dimen/small_text_size"
                android:visibility="gone"
                />
        </LinearLayout>
    </ScrollView>

    <include layout="@layout/layout_fetch_error"/>

</RelativeLayout>
