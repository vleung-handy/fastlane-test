<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:padding="@dimen/default_padding">

    <LinearLayout
        android:layout_weight="2"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Routing Number"
            android:textAppearance="@style/TextView.Bold"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/payments_update_info_routing_number_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="9-Digit Number"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/default_margin"
            android:text="Error State Text"
            android:textAppearance="@style/TextView.Bold"
            android:textColor="@color/error_red"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Account Number"
            android:textAppearance="@style/TextView.Bold"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/payments_update_info_account_number_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/default_margin"
            android:hint="**** 1234"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Social Security Number"
            android:textAppearance="@style/TextView.Bold"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/payments_update_info_tax_id_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/default_margin"
            android:hint="**** ** 1234"/>
    </LinearLayout>


    <Button
        android:id="@+id/payments_update_info_submit_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:background="@drawable/button_green_round"
        android:text="Save"
        android:textAllCaps="false"
        android:textColor="@color/white"/>
</LinearLayout>