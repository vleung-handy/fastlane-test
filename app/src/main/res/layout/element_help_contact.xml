<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/handy_bg">

    <RelativeLayout
        android:id="@+id/info_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/cell_booking_last_rounded"
        android:paddingBottom="5dp"
        >

        <RelativeLayout
            android:id="@+id/name_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            style="@style/BookingsCell">

            <ImageView
                android:id="@+id/name_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_name"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                />

            <com.handy.portal.ui.widget.FirstNameInputTextView
                android:id="@+id/help_contact_user_name_text"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:layout_toRightOf="@id/name_icon"
                android:layout_toEndOf="@id/name_icon"
                android:layout_centerVertical="true"
                android:padding="0dp"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"
                android:background="@null"
                style="@style/EditText.FirstName" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/email_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/name_layout"
            style="@style/BookingsCell">

            <ImageView
                android:id="@+id/email_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_email"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                />

            <com.handy.portal.ui.widget.EmailInputTextView
                android:id="@+id/help_contact_email_text"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:layout_toRightOf="@id/email_icon"
                android:layout_toEndOf="@id/email_icon"
                android:layout_centerVertical="true"
                android:padding="0dp"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"
                android:background="@null"
                style="@style/EditText.Email" />

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/comment_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/email_layout"
            android:gravity="top"
            style="@style/BookingsCell.End">

            <ImageView
                android:id="@+id/comment_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_pencil"
                android:layout_marginTop="-4dp"/>

            <com.handy.portal.ui.widget.BasicInputTextView
                android:id="@+id/help_contact_comment_text"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:hint="@string/contact_form_hint"
                android:gravity="top"
                app:minLength="1"
                android:padding="0dp"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"
                android:background="@null"
                style="@style/EditText.Last.Comment" />

        </LinearLayout>

    </RelativeLayout>

    <Button
        android:layout_below="@id/info_layout"
        android:id="@+id/send_message_button"
        android:text="@string/send_message"
        style="@style/Button.Green" />

</RelativeLayout>
