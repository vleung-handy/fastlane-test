<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme"
           parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/handy_blue</item>
        <item name="colorPrimaryDark">@color/handy_blue_pressed</item>
        <item name="colorControlActivated">@color/handy_blue</item>
        <item name="background">@color/handy_bg</item>
        <item name="android:datePickerDialogTheme">@style/HandyPickerDialogTheme</item>
    </style>

    <style name="Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/large_text_size</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:maxHeight">50dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="fontPath">fonts/CircularStd-Book.otf</item>
        <item name="android:textColor">@drawable/button_text_white_trans</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="AlertDialogStyle"
           parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/handy_blue</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="HandyPickerDialogTheme"
           parent="android:Theme.Material.Light.Dialog">
        <item name="android:colorAccent">@color/handy_blue</item>
        <item name="android:datePickerStyle">@style/HandyDatePickerStyle</item>
    </style>

    <style name="HandyDatePickerStyle"
           parent="@android:style/Widget.Material.Light.DatePicker">
        <item name="android:headerBackground">@color/handy_blue</item>
    </style>

    <style name="DefaultProgressSpinnerCircle">
        <item name="colorAccent">@color/handy_blue</item>
        <!--change color to handy_blue_progress_bar when we consolidate all the progress spinners into one-->
    </style>
</resources>
