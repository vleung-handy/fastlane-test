<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape android:shape="rectangle">
            <!--<solid android:color="@color/tertiary_grey" />-->
            <gradient
                android:angle="90"
                android:endColor="@color/white"
                android:startColor="@color/tertiary_grey"
                android:type="sweep" />

        </shape>
    </item>

    <item
        android:bottom="2dp"
        android:left="0dp"
        android:right="0dp"
        android:top="1dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/white" />
        </shape>
    </item>

</layer-list>