<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="false">
        <shape android:shape="oval">
            <solid android:color="@android:color/transparent" />
            <stroke android:width="2dp" android:color="@color/black_pressed" />
            <size android:width="52dp" android:height="52dp" />
        </shape>
    </item>
    <item android:state_checked="true">
        <layer-list>
            <item>
                <bitmap android:gravity="center" android:src="@drawable/ic_checkmark" />
            </item>
            <item>
                <shape android:shape="oval">
                    <solid android:color="@android:color/transparent" />
                    <stroke android:width="2dp" android:color="@color/handy_blue" />
                    <size android:width="52dp" android:height="52dp" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item android:state_checked="false">
        <shape android:shape="oval">
            <solid android:color="@android:color/transparent" />
            <stroke android:width="2dp" android:color="@color/black_pressed" />
            <size android:width="52dp" android:height="52dp" />
        </shape>
    </item>
</selector>
