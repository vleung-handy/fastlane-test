<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="false">
        <layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
            <item>
                <shape android:shape="rectangle">
                    <stroke android:width="1px" android:color="@color/white" />
                    <solid android:color="@color/white" />
                    <corners android:radius="5dp" android:topLeftRadius="0dp" android:topRightRadius="0dp" />
                </shape>
            </item>
            <item android:bottom="1px">
                <shape android:shape="rectangle">
                    <stroke android:width="1px" android:color="@color/white" />
                    <solid android:color="@color/white" />
                    <corners android:radius="5dp" android:topLeftRadius="0dp" android:topRightRadius="0dp" />
                </shape>
            </item>
        </layer-list>
    </item>

    <item android:state_pressed="true">
        <layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
            <item>
                <shape android:shape="rectangle">
                    <stroke android:width="1px" android:color="@color/cell_sep" />
                    <solid android:color="@color/cell_selected" />
                    <corners android:radius="5dp" android:topLeftRadius="0dp" android:topRightRadius="0dp" />
                </shape>
            </item>
            <item android:bottom="1px">
                <shape android:shape="rectangle">
                    <stroke android:width="1px" android:color="@color/cell_selected" />
                    <solid android:color="@color/cell_selected" />
                    <corners android:radius="5dp" android:topLeftRadius="0dp" android:topRightRadius="0dp" />
                </shape>
            </item>
        </layer-list>
    </item>

</selector>
