<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android"
          xmlns:app="http://schemas.android.com/apk/res-auto"
    >
    <item app:state_read="false">
        <shape android:shape="rectangle">
            <corners
                android:bottomLeftRadius="@dimen/notification_icon_radius"
                android:bottomRightRadius="@dimen/notification_icon_radius"
                android:topLeftRadius="@dimen/notification_icon_radius"
                android:topRightRadius="@dimen/notification_icon_radius"
                />

            <solid android:color="@color/electrician_yellow"/>
        </shape>
    </item>

    <item app:state_read="true">
        <shape android:shape="rectangle">
            <corners
                android:bottomLeftRadius="@dimen/notification_icon_radius"
                android:bottomRightRadius="@dimen/notification_icon_radius"
                android:topLeftRadius="@dimen/notification_icon_radius"
                android:topRightRadius="@dimen/notification_icon_radius"
                />

            <solid android:color="@color/inactive_notification_icon_color"/>
        </shape>
    </item>
</selector>
